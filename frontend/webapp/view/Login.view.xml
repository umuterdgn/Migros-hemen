<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  controllerName="migros.controller.Login">

  <Page title="Migros Hemen - Giriş">
    <content>
      <VBox class="sapUiSmallMargin sapUiMediumMarginTop">
        <Input id="emailInput" placeholder="E-posta" type="Email"/>
        <Input id="passwordInput" placeholder="Şifre" type="Password" />

        <Select id="roleSelect" selectedKey="customer">
          <items>
            <core:Item key="customer" text="Müşteri" />
            <core:Item key="store" text="Mağaza" />
          </items>
        </Select>

        <Button text="Giriş Yap" press="onLoginPress" type="Emphasized" />
        <Text id="loginErrorText" text="" visible="false" class="sapUiTinyMarginTop" />
      </VBox>
    </content>
  </Page>
</mvc:View>
