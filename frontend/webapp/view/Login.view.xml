<mvc:View 
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  controllerName="migros.controller.Login">

   <Page showHeader="false">
    <content>
      <VBox justifyContent="Center" alignItems="Center" class="fullHeight">
          <VBox class="loginBox" alignItems="Center" justifyContent="Center">
            <Title text="Migros Hemen Giriş Sayfası" level="H1" class="inputMargin" />
            
            <Input id="emailInput" placeholder="Email Address" class="inputMargin" width="100%" />
            <Input id="passwordInput" placeholder="Password" type="Password" class="inputMargin" width="100%" />

            <Link text="Forgot Password" class="linkMargin" press="onForgotPassword" />

            <Button text="Login" type="Emphasized" width="100%" class="inputMargin" press="onLoginPress" />

            <HBox class="inputMargin" justifyContent="Center">
              <Text text="Don't have an account?" />
              <Link text=" Signup" press="onSignup" />
            </HBox>
          </VBox>
        </VBox>
      </content>
    </Page>
</mvc:View>
